            </StackPanel>-->
            
            <Border
                x:Name="Zero"
                Grid.Column="0"
                Grid.Row="0"               
                Style="{StaticResource Squares}"
                >
                <StackPanel>
                    <Label Content="Start"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="player1"/>
                        <Label Content="player2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="player3"/>
                        <Label Content="player4"/>
                    </StackPanel>
                    <StackPanel.DataContext>
                        <Binding Source="{StaticResource myRepo}"/>
                    </StackPanel.DataContext>
                </StackPanel>
            </Border>

            <Border
                x:Name="One"
                Grid.Column="1"
                Grid.Row="0"
                Style="{StaticResource Squares}"
                >
                <StackPanel>
                    <Label Content="1"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="player1"/>
                        <Label Content="player2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="player3"/>
                        <Label Content="player4"/>
                    </StackPanel>
                    <StackPanel.DataContext>
                        <Binding Source="{StaticResource myRepo}"/>
                    </StackPanel.DataContext>
                </StackPanel>
            </Border>







